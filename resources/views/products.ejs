<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Produtos</title>
  </head>
  <body>
    <div id="app"></div>

    <!-- Durante desenvolvimento com Vite, abra o dev server (ex: http://localhost:5174) -->
    <!-- Em produção, o build do Vite deve gerar assets estáticos em public/ ou similar -->

    <script>
      // Tenta carregar o bundle do Vite em dev (porta 5174 em nosso caso)
      (function(){
        var script = document.createElement('script');
        script.src = 'http://localhost:5174/src/main.tsx';
        script.async = true;
        script.onerror = function(){
          // fallback: tentar carregar bundle estático
          var s2 = document.createElement('script');
          s2.src = '/assets/main.js';
          document.body.appendChild(s2);
        };
        document.body.appendChild(script);
      })();
    </script>
  </body>
</html>